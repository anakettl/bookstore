<div class="alert alert-success" role="alert">
  <h3 class="alert-heading">Books</h3>
</div>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Description</th>
      <th>Price</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.author %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.amount %></td>
      <tr>
    <% end %>
  </tbody>
</table>
</div>
