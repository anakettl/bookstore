<% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>
<div class="alert alert-success" role="alert">
  <h3 class="alert-heading">Books</h3>
</div>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th class="w-10">Department</th>
      <th class="w-10">Name</th>
      <th class="w-10">Author</th>
      <th class="w-15">Description</th>
      <th class="w-5">Price</th>
      <th class="w-5">Amount</th>
      <th class="sortStyle w-25">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.department.name %></td>
        <td><%= product.name %></td>
        <td><%= product.author %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.amount %></td>
        <td class="d-flex">
          <%= link_to "Update", 
              edit_product_path(product),
              class: "btn btn-default" 
          %>
          <%= button_to "Delete", 
              product, method: :delete , 
              class:"btn btn-danger", 
              data: { confirm: "Are you sure? " } 
          %>
        </td>
      <tr>
    <% end %>
  </tbody>
</table>
</div>
