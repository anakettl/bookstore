<% if flash[:notice]%>
  <div class="alert alert-success" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="alert alert-success" role="alert">
  <h1 class="alert-heading">Departments</h1>
</div>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th class="w-20">Name</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= link_to 'Show', department, class:"btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_department_path(department), class:"btn btn-default" %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Department', new_department_path, class: "btn btn-default" %>
